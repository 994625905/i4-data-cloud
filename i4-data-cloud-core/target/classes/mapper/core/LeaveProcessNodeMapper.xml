<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.i4.data.cloud.core.mapper.LeaveProcessNodeMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        t.id as id, 
        t.leave_process_id as leaveProcessId, 
        t.upper_id as upperId, 
        t.node_name as nodeName, 
        t.user_id as userId, 
        t.receive_user_id as receiveUserId, 
        t.deal_time as dealTime, 
        t.deal_type as dealType, 
        t.comment as comment
    </sql>

    <select id="selectPage" parameterType="cn.i4.data.cloud.core.entity.dto.LeaveProcessNodeDto"
            resultType="cn.i4.data.cloud.core.entity.view.LeaveProcessNodeView">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_leave_process_node AS t

    </select>

</mapper>