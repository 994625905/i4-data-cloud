<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.i4.data.cloud.core.mapper.HistoryImageReadMapper">

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        t.id as id, 
        t.image_id as imageId, 
        t.create_user_id as createUserId, 
        t.create_time as createTime
    </sql>

    <select id="selectPage" parameterType="cn.i4.data.cloud.core.entity.dto.HistoryImageReadDto"
            resultType="cn.i4.data.cloud.core.entity.view.HistoryImageReadView">
        SELECT
        <include refid="Base_Column_List" />
        FROM t_history_image_read AS t
    </select>

    <!--删除组下全部点赞-->
    <delete id="deleteByGroupId">
        delete t from t_history_image_like t where t.image_id in (
            select a.id from t_history_image a where a.group_id = #{groupId}
        )
    </delete>

</mapper>